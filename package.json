{
  "name": "game-watcher",
  "version": "1.0.0",
  "description": "A game monitoring application with MCP server integration for data engineering, software engineering, and personal productivity",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "build": "npm run compile",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "compile": "tsc",
    "prepare": "npm run compile"
  },
  "keywords": [
    "game-monitoring",
    "analytics",
    "mcp",
    "data-engineering",
    "gaming",
    "metrics",
    "ai-powered"
  ],
  "author": "Edward Plata",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EdwardPlata/game-watcher.git"
  },
  "bugs": {
    "url": "https://github.com/EdwardPlata/game-watcher/issues"
  },
  "homepage": "https://github.com/EdwardPlata/game-watcher#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "express": "^4.18.0",
    "dotenv": "^16.3.0",
    "node-cron": "^3.0.0",
    "ws": "^8.14.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/express": "^4.17.0",
    "@types/ws": "^8.5.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.0",
    "typescript": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "mcp": {
    "servers": {
      "github": {
        "type": "http",
        "url": "https://api.githubcopilot.com/mcp/"
      },
      "filesystem": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-filesystem", "/workspaces"]
      },
      "git": {
        "command": "uvx",
        "args": ["mcp-server-git", "--repository", "/workspaces/game-watcher"]
      },
      "fetch": {
        "command": "uvx",
        "args": ["mcp-server-fetch"]
      },
      "memory": {
        "command": "npx",
        "args": ["-y", "@modelcontextprotocol/server-memory"]
      },
      "time": {
        "command": "uvx",
        "args": ["mcp-server-time"]
      }
    }
  }
}