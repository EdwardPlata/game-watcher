# Daily Sports Calendar App Configuration
# Copy this file to .env and update with your actual API keys

# Database Configuration
DATABASE_NAME=sports_calendar.db

# API Keys (get from respective providers)
# API-Football (for soccer/football data)
API_FOOTBALL_KEY=your_api_football_key_here

# SportsDataIO (for NFL, NBA, etc.)
SPORTSDATA_KEY=your_sportsdata_key_here

# RapidAPI (for various sports APIs)
RAPIDAPI_KEY=your_rapidapi_key_here

# UFC API
UFC_API_KEY=your_ufc_api_key_here

# Google Calendar Configuration
GOOGLE_CALENDAR_CREDENTIALS_FILE=credentials.json
GOOGLE_CALENDAR_TOKEN_FILE=token.json

# Application Settings
LOG_LEVEL=INFO
FETCH_SCHEDULE_TIME=02:00
TIMEZONE=UTC

# Rate Limiting
API_RATE_LIMIT_DELAY=1.0
MAX_RETRIES=3

# Data Retention (days)
KEEP_EVENTS_DAYS=90